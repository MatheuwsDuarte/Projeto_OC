
@{
    ViewBag.Title = "Cadastro";
}
<link href="~/Content/styleNovoC.css" rel="stylesheet" />
<script src="~/Scripts/script.js"></script>
<div>

    <h1> Novo Cadastro </h1>
    <p> <input type="radio" required>Ativo</p>

</div>

    <form id="formC" action="~/Colaborador/Cadastro" name="novoC" method="post" autocomplete="off">

        <h2> 1° Fatos e Dados </h2>
        <div id="nome">

            <label for="inome"> Nome </label>
            <input type="text" id="inome" name="nome" placeholder="Nome completo" autocomplete="name" size="130" maxlength="100">

        </div>

        <div id="idade">

            <label for="idade"> Idade </label>
            <input type="date" id="idade" name="idade">

        </div>

        <div id="email">

            <label for="iemail"> E-mail </label>
            <input type="email" id="iemail" name="email" size="110">

        </div>

        <div id="endereco">

            <label for="iendereco"> Endereço </label>
            <input type="text" id="iendereco" name="endereco" size="130">

        </div>

        <div id="outrasinfo">

            <label for="ioutrasinfo"> Outras informações </label>
            <input type="text" id="ioutrasinfo" name="outrasinfo" size="130">

        </div>

        <div id="telefone">

            <label for="itelefone"> Telefone </label>
            <input type="number" id="itelefone" name="telefone" placeholder="(  ) -_ ____-____" size="130">

        </div>

        <h2 id="interesse"> 2° Interesses </h2>

        <div id="interesses">

            <textarea name="interesses" id="interesses" cols="125" rows="5"></textarea>
        </div>

        <h2 id="sentimento"> 3° Sentimentos </h2>

        <div id="sentimentos">
            <textarea name="sentimentos" id="sentimentos" cols="125" rows="5"></textarea>
        </div>

        <h2 id="valor"> 4° Valores </h2>

        <div id="valores">
            <textarea name="valores" id="valores" cols="125" rows="5"></textarea>
        </div>

        <p>
            <input type="submit" value="GRAVAR" onclick="validarNome()">
            <input type="reset" value="LIMPAR">
        </p>

    </form>

